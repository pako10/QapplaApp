<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="@dimen/activity_horizontal_margin">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rvGearsXbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/gowlog" />

                <TextView
                    android:id="@+id/tvGearsxbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="GOW 4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rvFifaXbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/fifa" />


                <TextView
                    android:id="@+id/tvFifaXbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="FIFA 17"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rvStreetXbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvGearsXbox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/halolog" />


                <TextView
                    android:id="@+id/tvHaloXbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif"
                    android:text="Halo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rvOverwatchXbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rvStreetXbox"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/overlog" />


                <TextView
                    android:id="@+id/tvOverXbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView7"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="OVERWATCH"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>

            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>
</LinearLayout>
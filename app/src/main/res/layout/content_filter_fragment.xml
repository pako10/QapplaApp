<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/filter_matches_dialog"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/imgGearsFilter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/fifalog"
        android:layout_below="@+id/imgCallofDutyFilter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <ImageView
        android:id="@+id/imgOverwatchFilter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/overlog" />

    <ImageView
        android:id="@+id/imgCallofDutyFilter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/gowlog"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imgFifaFilter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/lolog"
        android:layout_above="@+id/relativeLayout8"
        android:layout_alignLeft="@+id/imgCallofDutyFilter"
        android:layout_alignStart="@+id/imgCallofDutyFilter" />

    <ImageView
        android:id="@+id/imgStreetFilter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/hearthlog"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgGearsFilter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/relativeLayout8">

        <Button
            android:id="@+id/btXboxSearch"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Xbox"
            android:background="@drawable/selected_incomplete_round_button"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btPs4Search"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btXboxSearch"
            android:layout_toEndOf="@+id/btXboxSearch"
            android:layout_toRightOf="@+id/btXboxSearch"
            android:text="Ps4"
            android:background="#fff"/>

        <Button
            android:id="@+id/btPcSearch"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btPs4Search"
            android:layout_toEndOf="@+id/btPs4Search"
            android:layout_toRightOf="@+id/btPs4Search"
            android:text="Pc"
            android:background="@drawable/right_incomplete_round_button"/>

    </RelativeLayout>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/relativeLayout8"
        android:layout_toLeftOf="@+id/imgStreetFilter"
        android:layout_toStartOf="@+id/imgStreetFilter" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="lato"
        android:text="Creditos"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/switch1"
        android:layout_alignBottom="@+id/switch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp" />



    <Button
        android:id="@+id/btFilter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Filtrar"
        android:visibility="gone"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

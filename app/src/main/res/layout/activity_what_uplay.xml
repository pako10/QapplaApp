                    android:id="@+id/imgSelectHaloPc"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/halolog" />


                <TextView
                    android:id="@+id/tvHaloPc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgSelectHaloPc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="HALO"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rvOwerwatchPc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/imgSelectLol"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/lolog" />


                <TextView
                    android:id="@+id/tvOverPc"
                    android:layout_width="wrap_content"

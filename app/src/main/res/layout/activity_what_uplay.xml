            <TextView
                android:id="@+id/tvFifaPs4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgSelectFifaPs4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="Fifa"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"/>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rvStreetPs4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="64dp"
            android:layout_marginEnd="64dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">


            <ImageView
                android:id="@+id/imgSelectOverPs4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/overlog" />


            <TextView
                android:id="@+id/tvOverPs4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgSelectOverPs4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="Overwatch"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"/>

        </RelativeLayout>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

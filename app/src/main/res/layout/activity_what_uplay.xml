                    android:layout_marginTop="15dp"
                    android:text="GOW 4"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>



            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/rvFifaPc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvLolPc"
                android:layout_toLeftOf="@+id/rvOwerwatchPc"
                android:layout_toStartOf="@+id/rvOwerwatchPc"
